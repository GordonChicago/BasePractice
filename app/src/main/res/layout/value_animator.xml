<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:background="@color/black"
        android:layout_marginLeft="50dp">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="translationX"
            android:onClick="testTranslationX"
            android:layout_marginLeft="50dp"
            android:background="@color/colorAccent"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translationX"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translationX"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp"/>
    <Button
        android:id="@+id/btn_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平移"
        android:onClick="tanslationAnimation"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/btn_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转"
        android:onClick="rotateAnimation"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_trans"/>

    <Button
        android:id="@+id/btn_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="缩放"
        android:onClick="scacleAnimation"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_rotate"/>
</RelativeLayout>
