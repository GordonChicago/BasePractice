<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--基础图形的绘制-->
        <com.basepractice.view.CustomCircleView
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:src="@drawable/xml_bitmap" />

            <com.basepractice.view.DrawBitmap
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_test"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <!--XferMode练习-->
            <com.basepractice.view.SelfView
                android:id="@+id/seletct_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                app:color="@color/colorAccent"
                app:icon="@drawable/woniu"
                app:text="微信"
                app:text_size="10sp" />

            <com.basepractice.view.SelfView
                android:id="@+id/seletct_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                app:color="@color/colorAccent"
                app:icon="@drawable/woniu"
                app:text="微信"
                app:text_size="10sp" />

            <com.basepractice.view.SelfView
                android:id="@+id/seletct_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                app:color="@color/colorAccent"
                app:icon="@drawable/woniu"
                app:text="微信"
                app:text_size="10sp" />

            <com.basepractice.view.SelfView
                android:id="@+id/seletct_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                app:color="@color/colorAccent"
                app:icon="@drawable/woniu"
                app:text="微信"
                app:text_size="10sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.basepractice.view.LeanTextView
                android:id="@+id/learnTextView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:color="@color/black"
                app:cornerRadius="2dp"
                app:location="leftBottom"
                app:text="你好"
                app:textColor="@color/white"
                app:textRotateDegress="45"
                app:text_size="12sp" />

            <com.basepractice.view.MikeVolumView
                android:id="@+id/mikeVolumn"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="testInvalide"
                android:text="testInvalide" />
        </FrameLayout>

        <com.basepractice.view.HorizontalProgressbar
            android:id="@+id/horizon_progressBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/black"
            android:progress="0"
            app:progress_reach_height="2dp"
            app:progress_text_color="@color/blue"
            app:progress_unreach_color="@color/colorAccent"
            app:progress_unreach_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <com.basepractice.view.RoundImageView
                android:id="@+id/round_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/black_wu"
                app:circle_radius="10dp"
                app:corner_radius="10dp"
                app:type="round_corner" />

            <com.basepractice.view.CanvasTestView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp" />
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <com.basepractice.view.CircleProgressView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                app:reach_circle_width="2dp"
                app:unreach_circle_width="5dp"
                app:reach_color="@color/colorAccent"
                app:unreach_color="@color/blue"
                android:progress="90"
                android:background="@color/black"/>
        </LinearLayout>

        <com.basepractice.view.CanvasTestViewTwo
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp" />

        <com.basepractice.view.PathView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp" />

        <com.basepractice.view.PathViewCubic
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp" />

        <com.basepractice.view.AutoScrollTextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:minAlpha="0.1"
            app:minTextSize="10sp"
            app:textColor="@color/colorAccent"
            app:text_size="50sp" />

        <com.basepractice.view.RandomTextView
            android:id="@+id/randomTextView"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="1234"
            android:textSize="28sp"/>
        <Button
            android:id="@+id/btn_animStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="动弹"/>
    </LinearLayout>
</ScrollView>